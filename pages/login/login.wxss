.container{
  width: 100%;
  height: 100vh;
  background-color: #eee;
}
.wrap{
  text-align: center;
}
.wrap .imgwrap ,.nologin{
  padding:50rpx ;
  background-color: #fff;
}
.wrap image{
  width: 120rpx;
  height: 120rpx;
  box-shadow:0 0 20rpx  #999;
  border-radius: 50%;
}
.wrap .username{
  margin-top: 40rpx;
  font-size: 30rpx;
}
.userwallet{
  padding: 30rpx;
  margin-top: 20rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between ; 
}
.loginbtn{
  width: 100%;
  position: absolute;
  bottom: 40rpx;
}
.loginbtn button{
  width: 90%;
}